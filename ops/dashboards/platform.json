{
  "title": "Feelynx Platform Health",
  "panels": [
    {
      "title": "API Latency p95",
      "type": "timeseries",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_server_duration_bucket{service='api'}[5m])) by (le))"
        }
      ],
      "thresholds": [
        {
          "value": 0.25,
          "color": "red"
        }
      ]
    },
    {
      "title": "Live Signaling Latency p95",
      "type": "timeseries",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(livekit_signaling_duration_bucket[5m])) by (le))"
        }
      ],
      "thresholds": [
        {
          "value": 0.3,
          "color": "red"
        }
      ]
    },
    {
      "title": "Error Budget Burn",
      "type": "stat",
      "targets": [
        {
          "expr": "slo:error_budget_burn_rate{service='feelynx-web'}"
        }
      ]
    }
  ]
}
