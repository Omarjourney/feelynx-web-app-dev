generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  password String
  posts    Post[]
  payments Payment[]

  @@map("users")
}

model Post {
  id      Int    @id @default(autoincrement())
  userId  Int?   @map("user_id")
  user    User?  @relation(fields: [userId], references: [id])
  content String

  @@map("posts")
}

model Payment {
  id        Int      @id @default(autoincrement())
  userId    Int?     @map("user_id")
  user      User?    @relation(fields: [userId], references: [id])
  amount    Decimal
  createdAt DateTime @map("created_at") @default(now())

  @@map("payments")
}

model Creator {
  id Int @id @default(autoincrement())

  @@map("creators")
}

model PKBattle {
  id         Int      @id @default(autoincrement()) @map("battle_id")
  creatorAId Int      @map("creator_a_id")
  creatorBId Int      @map("creator_b_id")
  startAt    DateTime @map("start_at")
  endAt      DateTime? @map("end_at")
  status     String
  scoreA     Int      @default(0) @map("score_a")
  scoreB     Int      @default(0) @map("score_b")
  rounds     PKRound[]
  scores     PKScore[]

  @@map("pk_battles")
}

model PKRound {
  id         Int      @id @default(autoincrement())
  battleId   Int      @map("battle_id")
  battle     PKBattle @relation(fields: [battleId], references: [id])
  creatorAId Int      @map("creator_a_id")
  creatorBId Int      @map("creator_b_id")
  startAt    DateTime @map("start_at")
  endAt      DateTime? @map("end_at")
  status     String
  scoreA     Int      @default(0) @map("score_a")
  scoreB     Int      @default(0) @map("score_b")
  scores     PKScore[]

  @@map("pk_rounds")
}

model PKScore {
  id         Int      @id @default(autoincrement())
  battleId   Int      @map("battle_id")
  battle     PKBattle @relation(fields: [battleId], references: [id])
  creatorAId Int      @map("creator_a_id")
  creatorBId Int      @map("creator_b_id")
  startAt    DateTime? @map("start_at")
  endAt      DateTime? @map("end_at")
  status     String?
  scoreA     Int      @map("score_a")
  scoreB     Int      @map("score_b")
  createdAt  DateTime @map("created_at") @default(now())

  @@map("pk_scores")
}
