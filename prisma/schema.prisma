model GameEvent {
  id        Int         @id @default(autoincrement())
  sessionId Int         @map("session_id")
  session   GameSession @relation(fields: [sessionId], references: [id])
  type      String
  data      Json?
  createdAt DateTime    @default(now())

  @@map("game_events")
}

model Creator {
  id Int @id @default(autoincrement())
}
